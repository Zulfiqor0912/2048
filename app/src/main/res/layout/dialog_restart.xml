<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="256dp"
        android:layout_height="186dp"
        android:background="@drawable/bg_restart"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_yes"
            style="@style/lilit"
            android:layout_width="66dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_ok"
            android:text="yes"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_restart" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_no"
            style="@style/lilit"
            android:layout_width="66dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_ok"
            android:text="no"
            app:layout_constraintStart_toEndOf="@id/button_yes"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_restart" />

        <TextView
            android:id="@+id/text_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@raw/lilit"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="4dp"
            android:padding="18dp"
            android:text="Restart"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>